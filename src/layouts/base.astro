---
export interface Props {
   title: string;
   bodyClass: string;
}

// import "@fontsource/barlow";
// import "@fontsource/barlow/500.css";
// import "@fontsource/barlow/700.css";

const { title, bodyClass } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/svg+xml" href="/edifimak/favicon.svg" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
   </head>
   <body class={bodyClass}>
      <slot />
   </body>
</html>

<style is:global>
   @font-face {
      font-family: "Gotham";
      src: url("/edifimak/fonts/GothamBold.woff2") format("woff2");
      font-weight: 700;
      font-style: normal;
      font-display: swap;
   }

   @font-face {
      font-family: "Gotham";
      src: url("/edifimak/fonts/GothamMedium.woff2") format("woff2");
      font-weight: 500;
      font-style: normal;
      font-display: swap;
   }

   @font-face {
      font-family: "Gotham";
      src: url("/edifimak/fonts/GothamLight.woff2") format("woff2");
      font-weight: 300;
      font-style: normal;
      font-display: swap;
   }
</style>
