---
export interface Props {
	name: string,
	image: string,
}

const { image, name } = Astro.props;

---

<div class="flex flex-col w-44 sm:w-60 md:w-80 xl:w-80 mx-auto rounded-lg overflow-hidden hover:scale-105 transition">
   <a href={`/edifimak/category/${name.toLowerCase().toLowerCase().replace(/ /g, '-').replace(/[^\w-]+/g, '')}`} class="relative block bg-slate-800">
      <figure class="overflow-hidden aspect-w-3 aspect-h-2 w-full xl:aspect-w-8 xl:aspect-h-6">
         <img
            src={image}
            alt="Usuario"
            class="h-full w-full object-cover object-center"
         />
      </figure>
      <figcaption class="text-center lg:text-base font-medium py-3 text-gray-100">
         {name}
      </figcaption>
   </a>
</div>